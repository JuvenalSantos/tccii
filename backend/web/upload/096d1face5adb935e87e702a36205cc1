// Symfony Doctrine 
// Geração de entidades a patir do bando de dados através de anotações

// Mapeamento completo do banco de dados
// Importação da estrutura da tabela do banco de dado
php app/console doctrine:mapping:import --force PortotechAppBundle annotation

// Conversão do mapeamento
php app/console doctrine:mapping:convert annotation ./src

// Geração da Entidade (gets, sets e repositorios)
php app/console doctrine:generate:entities PortotechAppBundle


// Mapeamento de somente uma ou mais entidades   
// Importação da estrutura da tabela do banco de dado
php app/console doctrine:mapping:import --force PortotechAppBundle annotation --filter=E

// Conversão do mapeamento
php app/console doctrine:mapping:convert annotation ./src --filter=E --force

// Geração da Entidade (gets, sets e repositorios) para uma única entidade (tabela)
php app/console doctrine:generate:entities PortotechAppBundle:E

// CRUD
// Gerando CRUD (necessita da entity)
php app/console generate:doctrine:crud --entity=PortotechAppBundle:E --format=annotation --with-write --no-interaction
